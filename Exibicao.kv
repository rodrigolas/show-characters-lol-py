                    background_down: 'Imagens/katarina13.png'
                    border: 0,0,0,0
                    on_press: pLay1.page = 4
                Button:
                    #OBS:Professor caso você veja essa mensagem, essa foto está com a qualidade baixa e nao achei outra para substituir
                    background_normal: 'Imagens/katarina14.png'
                    background_down: 'Imagens/katarina14.png'
                    border: 0,0,0,0
                    on_press: pLay1.page = 0
            BoxLayout:
                orientation: 'vertical'
                BoxLayout:
                    
                    BoxLayout:
                        orientation: 'vertical'
                        padding: 8
                        Button:
                            background_normal: 'Imagens/katarina1.png'
                            background_down: 'Imagens/katarina1.png'
                            border: 0,0,0,0
                            on_release:
                                habilidades.text='PASSIVA- VORACIDADE:\n\nOs Tempos de Recarga de Katarina são reduzidos dramaticamente\n sempre que um Campeão que ela havia causado dano recentemente morrer.\nSe apanhar uma Adaga, Katarina a usa para cortar todos os inimigos próximos,\ncausando Dano Mágico.'
                    BoxLayout:
                        orientation: 'vertical'
                        padding: 8
                        Button:
                            background_normal: 'Imagens/katarina2.png'
                            background_down: 'Imagens/katarina2.png'
                            border: 0,0,0,0
                            on_release:
                                habilidades.text='Q- LÂMINA SALTITANTE:\n\nKatarina arremessa uma Adaga no alvo.\nEla salta em inimigos próximos antes de ricochetear e cair no chão.'
                    BoxLayout:
                        orientation: 'vertical'
                        padding: 8
                        Button:
                            background_normal: 'Imagens/katarina3.png'
                            background_down: 'Imagens/katarina3.png'
                            border: 0,0,0,0
                            on_release:
                                habilidades.text='W- PREPARAÇÃO:\n\nKatarina recebe um impulso de Velocidade de Movimento e joga uma Adaga para cima.'
                    BoxLayout:
                        orientation: 'vertical'
                        padding: 8
                        Button:
                            background_normal: 'Imagens/katarina4.png'
                            background_down: 'Imagens/katarina4.png'
                            border: 0,0,0,0
                            on_release:
                                habilidades.text='E- SHUNPO:\n\nKatarina desloca-se em direção ao alvo, golpeando-o caso seja inimigo ou\ngolpeando o inimigo mais próximo caso não seja.'        
                    BoxLayout:
                        orientation: 'vertical'
                        padding: 8
                        Button:
                            background_normal: 'Imagens/katarina5.png'
                            background_down: 'Imagens/katarina5.png'
                            border: 0,0,0,0
                            on_release:
                                habilidades.text='R- LÓTUS DA MORTE:\n\nKatarina gira em torno de si mesma, disparando adagas\nmuito rapidamente e causando muito Dano Mágico nos 3 Campeões inimigos mais próximos.'
                Label:
                    id: habilidades
                    text: 'Pressione alguma das habilidades acima:'
                    height: 200
                    font_size: 15
                Button:
                    text: 'Voltar'
                    font_size: 15
                    background_normal: 'Imagens/teste9.png'
                    background_down: 'Imagens/teste10.png'
                    size_hint: None, None
                    size: 100, 30
                    on_release: 
                        ScMain.current = 'ListaChamps'
                        ScMain.transition.direction = 'right'
    Screen:
        name:'Aatrox'
        BoxLayout:
            canvas.before:
                Color:
                    rgba: [.09, .09, .09, 1]
                Rectangle:
                    pos: self.pos
