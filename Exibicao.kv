<Tela>:
    id: ScMain
    Screen:
        name: 'inicio'
        BoxLayout:
            padding: 25
            canvas.before:
                Color:
                    rgba: [.09, .09, .09, 1]
                Rectangle:
                    pos: self.pos
                    size: self.size            
            orientation: 'vertical'            
            Image:
                id: logo
                source: 'Imagens/logotipo.png'
                allow_stretch: True   
                size_hint: None, None             
                size: 325, 325
                pos: self.pos
                pos_hint: {'center_x': 0.5}
            Button:
                id: btnLogin
                background_normal: 'Imagens/teste1.png'
                background_down: 'Imagens/teste2.png'
                size_hint: None,None
                text: 'Login'
                color: 0,0,0,1
                font_size: 30
                size: 300, 75
                pos_hint: {'center_x': 0.5}
                on_release: 
                    ScMain.current = 'Login'
                    ScMain.transition.direction = 'left'
            Button:
                id: btnRegistrar
                background_normal: 'Imagens/teste3.png'
                background_down: 'Imagens/teste4.png'
                size_hint: None,None
                text: 'Registrar-se'
                color: 0,0,0,1
                font_size: 30
                size: 300, 75
                pos_hint: {'center_x': 0.5}
                on_release:
                    ScMain.current = 'Registrar'
                    ScMain.transition.direction = 'left'
            Button:
                id: btnSobre
                background_normal: 'Imagens/teste5.png'
                background_down: 'Imagens/teste6.png'
                text: 'Sobre'
                color: 0,0,0,1
                font_size: 30
                size_hint: None,None
                size: 300, 75
                pos_hint: {'center_x': 0.5}
                on_release:
                    ScMain.current = 'sobre'
                    ScMain.transition.direction = 'left' 
            Button:
                id: btnFechar
                background_normal: 'Imagens/teste8.png'
                background_down: 'Imagens/teste7.png'
                text: 'Fechar'
                color: 0,0,0,1
                font_size: 30
                size_hint: None,None
                size: 300, 75
                pos_hint: {'center_x': 0.5}
                on_release: app.stop()             
    Screen:
        name: 'Login'
        BoxLayout:
            padding: 30        
            canvas.before:
                Color:
                    rgba: [0, .65, .65, 1]
                Rectangle:
                    pos: self.pos
                    size: self.size
            orientation: 'vertical'
            Label:
                text: 'Insira seus Dados:'
                font_size: 60
                color: 0, 1, 1, 1            
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    text: 'Usuário: '
                    font_size: 30
                TextInput:
                    id: txtUsuario                                        
                    font_size: 30
                    size_hint: None, None
                    size: 630, 45
                    pos_hint: {'center_y': 0.5}
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    text: 'Senha: '
                    font_size: 30
                    size_hint: None, None
                    pos_hint: {'center_y': 0.5}
                TextInput:
                    id: txtSenha
                    font_size: 30
                    size_hint: None, None
                    size: 630, 45
                    pos_hint: {'center_y': 0.5}
            Label:
                id: lblKiva
                text: ''
                font_size: 30
                size_hint: None, None
                pos_hint: {'center_x': 0.5}
            BoxLayout:
                spacing: 10
                orientation: 'horizontal'
                size_hint_y: None
                height: 80
                Button:
                    id: btnVoltar
                    text: 'VOLTAR'
                    font_size: 60
                    background_normal: 'Imagens/teste9.png'
                    background_down: 'Imagens/teste10.png'
                    on_release: 
                        ScMain.current = 'inicio'
                        ScMain.transition.direction = 'right'
                Button:
                    id: btnEntrar
                    text: 'Entrar'
                    font_size: 60
                    background_normal: 'Imagens/teste5.png'
                    background_down: 'Imagens/teste6.png'
                    on_release: app.login(txtUsuario,txtSenha,lblKiva,ScMain)
    Screen:
        name: 'Registrar'        
        BoxLayout:
            padding: 10
            canvas.before:
                Color:
                    rgba: [.65, .65, .65, 1]
                Rectangle:
                    pos: self.pos
                    size: self.size
            orientation: 'vertical'
            Label:
                text: 'Insira seus Dados:'
                font_size: 60
                color: 1, 0, 1, 1                           
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    text: 'Usuário:'
                    font_size: 30
                TextInput:
                    id: entradaUsuario
                    font_size: 30
                    size_hint: None, None
                    size: 630, 45
                    pos_hint: {'center_y': 0.5}
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    text: 'Senha:'
                    font_size: 30
                TextInput:
                    id: entradaSenha
                    font_size: 30
                    size_hint: None, None
                    size: 630, 45
                    pos_hint: {'center_y': 0.5}
            Button:
                id: btnRegistro
                text: 'Registrar'
                font_size: 20
                background_normal: 'Imagens/teste5.png'
                background_down: 'Imagens/teste6.png'
                size_hint: None, None
                size: 225, 45
                pos_hint: {'center_x': 0.5}
                on_press: app.registro(entradaUsuario,entradaSenha,lblKivy)
            Label:
                id:lblKivy
                text: ''
                font_size: 30
                pos_hint: {'center_x': 0.5}
            Button:
                text: 'VOLTAR'                
                font_size: 15
                background_normal: 'Imagens/teste9.png'
                background_down: 'Imagens/teste10.png'
                size_hint: None, None
                size: 100, 30
                pos_hint: {'center_y': 0.5}
                on_release: 
                    ScMain.current = 'inicio'
                    ScMain.transition.direction = 'right'
    Screen:
        name: 'sobre'
        BoxLayout:
            padding: 25
            canvas.before:
                Color:
                    rgba: [.09, .09, .09, 1]
                Rectangle:
                    pos: self.pos
                    size: self.size            
            orientation: 'vertical'           
            Label:
                id: 'lblSobre'
                text: 'Bem vindo ao programa E-Golas feito por Rodrigo Cunha Gasparotto,\nem que o intuito dele é que você possa escolher algum campeão\ndo jogo League of Legends (LOL). E descobrir o que suas habilidades fazem.'
                font_size: 20
                height: 10
            Label:
                id: 'lblSobre1'
                text: 'Observação: É um programa que ainda não contém todos os personagens do jogo.'
                font_size: 20
                height: 10
            Button:
                text: 'VOLTAR'                
                font_size: 15
                background_normal: 'Imagens/teste9.png'
                background_down: 'Imagens/teste10.png'
                size_hint: None, None
                size: 100, 30
                pos_hint: {'center_y': 0.5}
                on_release: 
                    ScMain.current = 'inicio'
                    ScMain.transition.direction = 'right'    
    Screen:
        name:'ListaChamps'
        BoxLayout:
            padding: 25
            spacing: 10
            canvas.before:
                Color:
                    rgba: [.09, .09, .09, 1]
                Rectangle:
                    pos: self.pos
                    size: self.size            
            orientation: 'vertical'
            Label:
                text: 'Escreva o nome de um campeão:'
                color: 1,1,1,1
                font_size: 45
                pos_hint: {'center_x': 0.5} 
                padding_bottom: 10
            TextInput:
                id: inputChamp
                size_hint: None,None
                size: 630, 45
                font_size: 30
                pos_hint: {'center_x': 0.5}
                padding_bottom: 10
            Button:
                id: btnSelecionar
                text: 'Selecionar'
                background_normal: 'Imagens/teste11.png'
                background_down: 'Imagens/teste12.png'
                font_size: 15
                size_hint: None,None
                size: 100, 30
                pos_hint: {'center_x': 0.5}
                on_press:
                    app.pagChamp(inputChamp,textoErro,ScMain)
                    ScMain.transition.direction = 'left'
            Label:
                id: textoErro
                color: 1,1,1,1
                text: ''
                font_size: 20
                pos_hint: {'center_x': 0.5}
                padding_bottom: 10
            Image:
                id: logo
                source: 'Imagens/logotipo.png'
                allow_stretch: True   
                size_hint: None, None             
                size: 250, 250
                pos_hint: {'center_x': 0.5,'center_y': 0.5}
            BoxLayout:
                orientation: 'vertical'
                size_hint: None, None
                size: 40,70
                pos_hint: {'x': 0.5}
                Label:
                    text: 'Lista de Campeões:'
                    font_size:30
                    background_color: 1, 1, 1, 1
                Label:
                    text: '\nAatrox'
                    font_size:15
                    background_color: 1, 1, 1, 1
                Label:
                    text: '\nGragas'
                    font_size:15
                    background_color: 1, 1, 1, 1
                Label:
                    text: '\nYasuo'
                    font_size:15
                    background_color: 1, 1, 1, 1
                Label:
                    text: '\nSylas'
                    font_size:15
                    background_color: 1, 1, 1, 1
                Label:
                    text: '\nKatarina'
                    font_size:15
                    background_color: 1, 1, 1, 1
            Button:
                text: 'Logout'
                font_size: 15
                background_normal: 'Imagens/teste9.png'
                background_down: 'Imagens/teste10.png'
                size_hint: None, None
                size: 100, 30
                on_release: 
                    ScMain.current = 'inicio'
                    ScMain.transition.direction = 'right'
    Screen:
        name:'Katarina'
        BoxLayout:
            canvas.before:
                Color:
                    rgba: [.09, .09, .09, 1]
                Rectangle:
                    pos: self.pos
                    size: self.size            
            orientation: 'vertical'            
            PageLayout:
                id: pLay1
                Button:	
                    background_normal: 'Imagens/katarina.png'
                    background_down: 'Imagens/katarina.png'
                    border: 0,0,0,0
                    on_press: pLay1.page = 1
                Button:
                    background_normal: 'Imagens/katarina11.png'
                    background_down: 'Imagens/katarina11.png'
